{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persona Canonical Source Index",
  "type": "object",
  "required": ["schema_version", "doc_type", "source", "generated_utc", "anchors", "chunks"],
  "properties": {
    "schema_version": {"type": "integer"},
    "doc_type": {"type": "string", "const": "source_index"},
    "source": {
      "type": "object",
      "required": ["path", "sha256", "bytes", "line_count"],
      "properties": {
        "path": {"type": "string"},
        "sha256": {"type": "string"},
        "bytes": {"type": "integer"},
        "line_count": {"type": "integer"}
      }
    },
    "generated_utc": {"type": "string"},
    "anchors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["anchor_id", "kind", "name", "start_line", "end_line", "snippet_hash"],
        "properties": {
          "anchor_id": {"type": "string"},
          "kind": {"type": "string"},
          "name": {"type": "string"},
          "start_line": {"type": "integer"},
          "end_line": {"type": "integer"},
          "snippet_hash": {"type": "string"},
          "excerpt": {"type": "string"}
        }
      }
    },
    "chunks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["chunk_id", "title", "anchors", "snippet_hash"],
        "properties": {
          "chunk_id": {"type": "string"},
          "title": {"type": "string"},
          "anchors": {"type": "array", "items": {"type": "string"}},
          "snippet_hash": {"type": "string"}
        }
      }
    }
  }
}
