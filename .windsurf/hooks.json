{
  "hooks": {
    "pre_run_command": [
      {
        "command": "python3 .windsurf/scripts/block_dangerous.py",
        "show_output": true
      }
    ],
    "pre_read_code": [
      {
        "command": "python3 .windsurf/scripts/block_secrets_read.py",
        "show_output": true
      }
    ],
    "pre_mcp_tool_use": [
      {
        "command": "python3 .windsurf/scripts/mcp_allowlist.py",
        "show_output": true
      }
    ],
    "post_write_code": [
      {
        "command": "python3 .windsurf/scripts/post_gates.py",
        "show_output": false
      }
    ],
    "post_cascade_response": [
      {
        "command": "python3 .windsurf/scripts/post_log.py",
        "show_output": false
      }
    ]
  }
}